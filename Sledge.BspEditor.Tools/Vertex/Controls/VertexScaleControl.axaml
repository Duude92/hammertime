<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="231" d:DesignHeight="70"
             Width="231" Height="70"
             x:Class="Sledge.BspEditor.Tools.VertexScaleControl">
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label Name="ScaleDistanceLabel" Content="Scale distance (%)"/>
      <NumericUpDown Name="DistanceValue" ValueChanged="DistanceValueChanged"/>
      <Button Name="ResetDistanceButton" Content="Reset" Click="ResetDistanceClicked"/>
    </StackPanel>
    <Button Name="ResetOriginButton" Content="Reset Origin" Click="ResetOriginClicked"/>
  </StackPanel>
</UserControl>
