<Window xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="1067" d:DesignHeight="574"
			 Width="1067" Height="574"
			 x:Class="Sledge.Shell.Forms.SettingsForm">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TreeView Margin="8,3,4,3" Width="317" Height="490" Name="GroupList"
					  SelectionChanged="GroupList_SelectionChanged">
				<TreeView.Styles>
					<Style Selector="TreeViewItem">
						<Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
					</Style>
				</TreeView.Styles>
				<TreeView.ItemTemplate >
					<TreeDataTemplate ItemsSource="{Binding Children}">
						<TextBlock Text="{Binding Name}"/>
					</TreeDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
			<StackPanel Margin="4,3,4,3" Width="725" Height="490"
			   HorizontalAlignment="Left"
							Name="SettingsPanel"/>
		</StackPanel>
		<WrapPanel HorizontalAlignment="Right">
			<Button Content="Ok" Name="OKButton"/>
			<Button Content="Cancel" Name="CancelButton"/>
		</WrapPanel>
	</StackPanel>
</Window>
