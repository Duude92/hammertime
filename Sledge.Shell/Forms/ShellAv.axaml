<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sledge.Shell"
        mc:Ignorable="d" d:DesignWidth="824" d:DesignHeight="562"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="30"
        Width="824"
        Height="562"
        x:Class="Sledge.Shell.Forms.ShellAv"
        Title="Shell">
  <Window.Styles>
    <Style Selector="TabControl>TabItem">
      <Setter Property="FontSize" Value="10"/>
      <Setter Property="Padding" Value="5"/>
      <Setter Property="CornerRadius" Value="5,5,0,0"/>
    </Style>
    <Style Selector="Menu>MenuItem">
      <!--<Setter Property="FontSize" Value="15"/>-->
    </Style>
    <Style Selector="StackPanel">
      <Style Selector="^>Button.checked">
        <Setter Property="Background" Value="{DynamicResource ThemeBorderLowBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}"/>
      </Style>
      <Style Selector="^>Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
      </Style>
      <Style Selector="^>Button:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush4}"/>
      </Style>
      <Style Selector="^>Button:pressed">
        <Setter Property="Background" Value="{DynamicResource ThemeForegroundBrush}"/>
      </Style>
    </Style>
  </Window.Styles>
  <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="MainDockPanel" Margin="5,10,5,0" >

    <Menu Name="MenuStrip" DockPanel.Dock="Top" >
      <MenuItem Header="File">
        <MenuItem Header="Open"/>
      </MenuItem>
    </Menu>

    <StackPanel Classes="tool_panel" DockPanel.Dock="Top" Orientation="Horizontal" Name="TopToolStripPanel" >
      <Button>TestToolButton</Button>
    </StackPanel>

    <StackPanel Name="StatusStrip" Orientation="Horizontal"  VerticalAlignment="Bottom" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Height="30"/>

    <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Name="LeftToolStripPanel" Width="36" >
      <StackPanel Classes="tool_panel" Name="ToolsContainer" Orientation="Vertical">
        <!-- Left panel tools buttons-->
        <Button Classes="checked">
          <Image Source="/Resources/Menu_Export.png" />
        </Button>

      </StackPanel>
    </StackPanel>

    <DockPanel Name="BottomSidebar" Height="115" DockPanel.Dock="Bottom" >
      <TabControl Name="BottomTabs"/>
    </DockPanel>

    <StackPanel Name="RightSidebarContainer" MinWidth="233"  Orientation="Vertical"  DockPanel.Dock="Right"/>

    <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top">
      <TabControl Name="DocumentTabs" Height="28" Margin="5,0,0,0" DockPanel.Dock="Top">
        <TabItem Header="Tab1"/>
        <TabItem Header="Tab2"/>
      </TabControl>

      <Panel Name="DocumentContainer" DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="LightGray" Margin="3,0"/>

    </DockPanel>
  </DockPanel>
</Window>
