<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sledge.Shell"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sledge.Shell.Forms.ShellAv"
        Title="ShellAv">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0">
      <Menu Name="MenuStrip">
        <MenuItem Header="File">
          <MenuItem Header="Open"/>
        </MenuItem>
      </Menu>

      <DockPanel Name="ContentPanel">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Name="TopToolStripPanel">
          <Button>TestToolButton</Button>
        </StackPanel>
        <local:DockedPanelAv Name="LeftSidebar">
          <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Name="LeftToolStripPanel" MinWidth="20" >
            <StackPanel Name="ToolsContainer" Width="36" >
              <!-- Left panel tools buttons-->
              <!--
              <Button>TestToolButton2</Button>
              -->
            </StackPanel>
          </StackPanel>
        </local:DockedPanelAv>
        <TabControl DockPanel.Dock="Left" Name="DocumentTabs">
          <TabItem Header="Tab1"/>
          <TabItem Header="Tab2"/>
        </TabControl>
        <Panel Name="DocumentContainer"/>
        <DockPanel Name="RightSidebar">
          <StackPanel DockPanel.Dock="Right" Orientation="Vertical" Background="Black">
          </StackPanel>
        </DockPanel>
        <DockPanel Name="BottomSidebar">
        </DockPanel>
      </DockPanel>

      <TextBlock Name="StatusStrip" Text="StatusBar" DockPanel.Dock="Bottom" FontSize="25" Height="30"/>
    </StackPanel>
  </Grid>

</Window>
